@using BOL;

@{
    <html>
    <head>
        <title>Product Details</title>
    </head>
    <body>
        <form asp-action="ProductById" method="post">
            <label for="productId">Enter Product ID:</label>
            <input type="text" id="productId" name="id" />
            <button type="submit">Get Product</button>
        </form>

        @if (ViewData["catalog1"] != null)
        {
            var products = (Product)ViewData["catalog1"];
            <ul>
                <li>Title: @products.Pid</li>
                <li>Description: @products.Pname</li>
                <li>Unit Price: @products.Qty</li>
                <li>Quantity: @products.Price</li>
            </ul>
        }
    </body>
    </html>
}

