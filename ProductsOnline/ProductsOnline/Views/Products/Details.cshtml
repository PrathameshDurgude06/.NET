@model ProductsOnline.Models.Product

<h2>Product Details</h2>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Unit Price</dt>
    <dd class="col-sm-10">@Model.UnitPrice</dd>
    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10"><img src="@Model.ImageUrl" alt="Product Image" width="100" /></dd>
    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
